/* pages/contact/contact.wxss */

page {
  background-color: #f1f1f1;
}

.inputRoom {
  width: 100vw;
  height: 16vw;
  border-top: 1px solid #cdcdcd;
  background-color: #f1f1f1;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  z-index: 20;
}

input {
  width: 76vw;
  height: 9.33vw;
  background-color: #fff;
  border-radius: 40rpx;
  margin-left: 2vw;
  padding: 0 3vw;
  font-size: 28rpx;
  color: #444;
}

.leftMsg {
  font-size: 35rpx;
  color: #444;
  line-height: 7vw;
  padding: 2vw 2.5vw;
  background-color: #fff;
  margin-left: -1.6vw;
  border-radius: 10rpx;
  z-index: 10;
}

.rightMsg {
  font-size: 35rpx;
  color: #444;
  line-height: 7vw;
  padding: 2vw 2.5vw;
  background-color: #96EB6A;
  margin-right: -1.6vw;
  border-radius: 10rpx;
  z-index: 10;
}

#comments .input{
    border-top: 0.5px solid #eff2f7;
    padding-top:5px;
    padding-left:10px;
}
#comments .input .text{
    width:50%;
    height:39px;
    background: #eeeeee;
    border-radius: 7px;
    font-size:17px;
    text-indent: 10px;
    padding-left:10px;
    float: left;
}
#comments .input .submit{
    width:35%;
    height:39px;
    float: left;
    margin-left:6px;
    padding:0px;
    text-align: center;
    line-height:39px;
    background:#3581be;
    font-size:17px;
    color:#fff;
}

